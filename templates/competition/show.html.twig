{% extends 'base.html.twig' %}

{% block title %}Show Competition{% endblock %}

{% block body %}
    <a href = "{{ path("history_competition", {competition:competition.id}) }}">История</a>
    <h1>{{ competition.name }}</h1>
    <h1>{{ competition.description }}</h1>

    {% for rating in ratings %}
        {% if  rating.place %}
            <p> Место: {{ rating.place }} Игрок: {{ rating.player.firstName }}</p>
        {% endif %}
    {% endfor %}
{% endblock %}